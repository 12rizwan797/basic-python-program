user="rizwan"
pwd=897
username=input("enter the username")
if username!=user:
  print("invalid username")
  username=input("enter the username")
  if username==user:
    print("correct username")
  password=int(input("enter the password"))
  if password!=pwd:
    print("invalid password")
    password=int(input("enter the password"))
    if password==pwd:
      print("correct password")
      if(user==username and pwd==password):
        print("login success")
else:
  print("login failed")

  
